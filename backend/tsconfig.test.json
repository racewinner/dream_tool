{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "./test-dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmitOnError": false
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}

# Production Environment Configuration
# Copy this file to .env.production and update with your production values
# NEVER commit actual production secrets to version control

# Application Environment
NODE_ENV=production
PORT=3001

# Domain Configuration
DOMAIN=your-domain.com
API_BASE_URL=https://your-domain.com

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=dream_tool_prod
DB_USER=dream_tool_user
DB_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_123!

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD_456!

# JWT Configuration
JWT_SECRET=CHANGE_THIS_JWT_SECRET_VERY_LONG_AND_RANDOM_STRING_789!
JWT_EXPIRY=24h

# KoboToolbox Integration
KOBO_API_URL=https://eu.kobotoolbox.org/api/v2
KOBO_API_TOKEN=YOUR_KOBO_API_TOKEN_HERE

# Email Configuration (for notifications)
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_USER=your-email@your-domain.com
SMTP_PASSWORD=YOUR_EMAIL_PASSWORD
SMTP_FROM=noreply@your-domain.com

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/private.key

# Monitoring Configuration
GRAFANA_PASSWORD=CHANGE_THIS_GRAFANA_PASSWORD_ABC!
PROMETHEUS_RETENTION=30d

# Security Configuration
CORS_ORIGIN=https://your-domain.com
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE_MB=50
UPLOAD_DIR=/app/uploads

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_KEY
AWS_REGION=us-east-1

# Feature Flags
ENABLE_REGISTRATION=false
ENABLE_2FA=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_AUDIT_LOGGING=true

# Performance Configuration
DB_POOL_MIN=5
DB_POOL_MAX=20
REDIS_POOL_SIZE=10

# Security Headers
ENABLE_HELMET=true
ENABLE_RATE_LIMITING=true
ENABLE_CSRF_PROTECTION=true
